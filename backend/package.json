{
    "name": "zanara-backend",
    "version": "1.0.0",
    "description": "Zanara Platform Backend",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "test": "jest --detectOpenHandles",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^7.5.0",
        "multer": "^1.4.5-lts.1",
        "nodemailer": "^6.9.1",
        "socket.io": "^4.8.1",
        "stripe": "^18.2.1",
        "validator": "^13.9.0"
    },
    "devDependencies": {
        "jest": "^29.5.0",
        "mongodb-memory-server": "^8.12.0",
        "nodemon": "^2.0.22",
        "supertest": "^6.3.3"
    },
    "jest": {
        "testEnvironment": "node",
        "setupFilesAfterEnv": [
            "./tests/setup.js"
        ],
        "testMatch": [
            "**/tests/**/*.test.js"
        ],
        "verbose": true
    }
}
